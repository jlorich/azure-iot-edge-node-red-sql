{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {}
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "NodeRED": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "nodered/node-red",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "1880/tcp": [
                      {
                        "HostPort": "1880"
                      }
                    ]
                  },
                  "Binds": [
                    "/c/iot-edge-data/node-red:/data"
                  ]
                }
              }
            }
          },
          "AzureSQLEdge": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azure-sql-edge/premium",
              "createOptions": {
                "HostConfig": {
                  "CapAdd": [
                    "SYS_PTRACE"
                  ],
                  "Binds": [
                    "sqlvolume:/sqlvolume"
                  ],
                  "PortBindings": {
                    "1433/tcp": [
                      {
                        "HostPort": "1433"
                      }
                    ]
                  },
                  "Mounts": [
                    {
                      "Type": "volume",
                      "Source": "sqlvolume",
                      "Target": "/var/opt/mssql"
                    }
                  ]
                },
                "Env": [
                  "ACCEPT_EULA=Y",
                  "MSSQL_SA_PASSWORD=password123",
                  "MSSQL_LCID=1033",
                  "MSSQL_COLLATION=SQL_Latin1_General_CP1_CI_AS",
                  "MSSQL_AGENT_ENABLED=TRUE",
                  "ClientTransportType=AMQP_TCP_Only",
                  "PlanId=asde-premium-on-iot-edge"
                ]
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "default": "FROM /messages/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}